#include <Adafruit_GFX.h>
#include <Adafruit_GrayOLED.h>
#include <Adafruit_SPITFT.h>
#include <Adafruit_SPITFT_Macros.h>
#include <gfxfont.h>


#include <Adafruit_SSD1306.h>
#include <Wire.h>
#include <Bonezegei_DHT11.h>


#define ANCHO 128
#define ALTO 64
#define OLED_RESET 0
#define i2c_dir 0x3C

Adafruit_SSD1306 oled(ANCHO,ALTO,&Wire,OLED_RESET);
Bonezegei_DHT11 dht(D4);

float TEMPCEL;
int hum; 

void setup() {
  Serial.begin(115200);
  dht.begin();
  pinMode(D3, OUTPUT);

  Wire.begin();
  Serial.begin(115200);
  oled.begin(SSD1306_SWITCHCAPVCC, i2c_dir);
  oled.clearDisplay();
  oled.display();
  delay(100);
}

void loop() {
  if (dht.getData()) { 
                           
    TEMPCEL = dht.getTemperature();   
    hum = dht.getHumidity();  
                
    Serial.printf("Temperatura: %0.1lfÂ°C  Humedad:%d \n", TEMPCEL, hum);
  }

  delay(500);  
oled.clearDisplay();
  oled.setTextSize(1);
  oled.setTextColor(WHITE);
  oled.setCursor(35, 30);
  oled.print("T: ");
  oled.print(TEMPCEL);
  oled.setCursor(35, 40);
  oled.print("hum= ");
  oled.print(hum);
  oled.display();
  delay(500);
  
  



  if (TEMPCEL >= 26) {
    digitalWrite(D3, HIGH);
    delay(200);
    digitalWrite(D3, LOW);
    delay(200);
  }
}
